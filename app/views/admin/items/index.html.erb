          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Atelier</th>
                      <th>Lieux</th>
                      <th>Start date</th>
                      <th>Prix</th>
                      <th>Modifier</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                     <th>Atelier</th>
                      <th>Lieux</th>
                      <th>Start date</th>
                      <th>Prix</th>
                      <th>Modifier</th>
                    </tr>
                  </tfoot>
                  <tbody>
                  <% @items.reverse_each do |item|  %> 
                    <tr>
                      <td><%=item.title%></td>
                      <td><%=item.city.city%></td>
                      <td><%=item.date%></td>
                      <td><%=number_to_euro(item.price)%></td>
                      <td class="text-center">
                      <%= link_to item_path(id: item.id), :method => :delete, data: { confirm: 'Are you sure?' } do %>
                        <i class="fas fa-trash-alt text-danger"></i>
                      <% end %></td>
                    </tr>
                    <%end%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

